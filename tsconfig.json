{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./resources", // base url tetap "resources"
    "paths": {
      "@/*": ["js/*"], // shortcut umum
      "components/*": ["js/components/*"],
      "layouts/*": ["js/layouts/*"],
      "pages/*": ["js/pages/*"],
      "hooks/*": ["js/hooks/*"],
      "types/*": ["js/types/*"],
      "mui/*": ["js/components/mui/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    },
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.tsx"
  ]
}
